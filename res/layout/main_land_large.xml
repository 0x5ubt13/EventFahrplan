<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
	android:layout_height="match_parent" android:orientation="vertical"
	android:background="#000000" xmlns:android="http://schemas.android.com/apk/res/android"
	>
	
	<LinearLayout android:id="@+id/roomNameLandscape"
		android:orientation="horizontal" android:layout_width="match_parent"
		android:layout_height="wrap_content"
    	android:layout_alignParentTop="true" 
		>
		<TextView android:layout_height="wrap_content"
			android:layout_width="25dp" android:text=""></TextView>

		<TextView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center"
		    android:layout_weight="1"
		    android:gravity="center"
		    android:text="Saal 1"
		    android:textColor="#ffffff"
		    android:textSize="16sp"
			android:id="@+id/roomName1"
		    android:textStyle="bold" >
		</TextView>

		<TextView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center"
		    android:layout_weight="1"
		    android:gravity="center"
		    android:text="Saal 2"
		    android:textColor="#ffffff"
		    android:textSize="16sp"
			android:id="@+id/roomName2"
		    android:textStyle="bold" >
		</TextView>

		<TextView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center"
		    android:layout_weight="1"
		    android:gravity="center"
		    android:text="Saal G"
		    android:textColor="#ffffff"
		    android:textSize="16sp"
			android:id="@+id/roomName3"
		    android:textStyle="bold" >
		</TextView>
		<TextView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center"
		    android:layout_weight="1"
		    android:gravity="center"
		    android:text="Saal 6"
		    android:textColor="#ffffff"
		    android:textSize="16sp"
			android:id="@+id/roomName4"
		    android:textStyle="bold" >
		</TextView>
	</LinearLayout>
	<ScrollView android:id="@+id/scrollView1"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:layout_below="@+id/roomNameLandscape" xmlns:android="http://schemas.android.com/apk/res/android"
		android:fadingEdge="none">
		<LinearLayout android:id="@+id/linearLayout1"
			android:layout_width="match_parent" android:layout_height="match_parent"
			android:orientation="horizontal">

			<LinearLayout
			    android:id="@+id/times_layout"
			    android:layout_width="wrap_content"
			    android:layout_height="match_parent"
			    android:layout_weight="0"
			    android:background="#ffaaaaaa"
			    android:orientation="vertical" >

			</LinearLayout>

			<LinearLayout
			    android:id="@+id/scrollContainer"
			    android:layout_width="0dp"
			    android:layout_height="match_parent"
			    android:layout_weight="1"
			    android:background="@color/fahrplan_background"
			    android:orientation="horizontal" >

				<LinearLayout
				    android:id="@+id/raum1"
				    android:layout_width="0dp"
				    android:layout_height="match_parent"
				    android:layout_weight="1"
				    android:orientation="vertical" >

				</LinearLayout>

				<LinearLayout
				    android:id="@+id/raum2"
				    android:layout_width="0dp"
				    android:layout_height="match_parent"
				    android:layout_weight="1"
				    android:orientation="vertical" >

				</LinearLayout>

	 			<LinearLayout
	 			    android:id="@+id/raum3"
	 			    android:layout_width="0dp"
	 			    android:layout_height="match_parent"
	 			    android:layout_weight="1"
	 			    android:orientation="vertical" >

				</LinearLayout>

	 			<LinearLayout
	 			    android:id="@+id/raum4"
	 			    android:layout_width="0dp"
	 			    android:layout_height="match_parent"
	 			    android:layout_weight="1"
	 			    android:orientation="vertical" >

				</LinearLayout>
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
	<LinearLayout android:id="@+id/statusLine"
		android:layout_width="match_parent" android:layout_height="wrap_content"
		android:background="#B0000000" android:layout_alignParentBottom="true">

		<TextView
		    android:id="@+id/statusLineText"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_gravity="bottom"
		    android:gravity="center_horizontal"
		    android:text="TextView2"
		    android:textColor="#fff"
			android:padding="6dp"
		    android:textSize="20sp" >
</TextView>
	</LinearLayout>
</RelativeLayout>
